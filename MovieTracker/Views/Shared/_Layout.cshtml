<body>
    <div class="navbar navbar-default navbar-fixed-top">

        <div class="navbar-left" style="margin-top:8px;">
            <ul class="nav navbar-nav">
                @using (Html.BeginForm("Index", "Movies", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
                {
                    <li>
                        <img src="~/Content/Images/projector.png" alt="" />

                    </li>
                }
            </ul>
        </div>

        <div class="container">
                <div class="navbar-header" style="margin-top:8px;">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    
                    @Html.ActionLink("Movie Tracker", "Index", "Home", new { area = "" }, new { @class = "navbar-brand " })
                </div>


                <div class="navbar-left" style="margin-top:8px;">
                    <ul class="nav navbar-nav">
                        @using (Html.BeginForm("Create", "Movies", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
                        {
                            <li>
                                <input type="submit" value="New Movie" class="btn btn-default" />

                            </li>
                        }
                    </ul>
                </div>

                <div class="navbar-left" style="margin-top:8px;">
                    <ul class="nav navbar-nav">
                        @using (Html.BeginForm("Index", "Movies", FormMethod.Get, new { @class = "navbar-form navbar-left" }))
                        {
                            <li>
                                @Html.TextBox("search", null, new { @class = "form-control", id = "search", @title = "Search by actor, movie year, title, director, etc." })<input type="submit" name="submit" value="Search" class="btn btn-default" />
                            </li>

                        }

                    </ul>
                </div>





            </div>
        </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Movie Tracker</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
